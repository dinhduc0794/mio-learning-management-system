@{
    ViewData["Title"] = "LMS Home";
}

<!-- Hero Section -->
<section style="background-color: #f6fffa; border-radius: 1.5rem; padding: 3rem 0; box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.05);">
    <div class="container" style="padding: 0 48px;">
        <div class="row align-items-center">
            <!-- Left content -->
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h1 style="font-size: 2.5rem; font-weight: 700; color: #0d6efd; margin-bottom: 1rem;">
                    🎓 Modern Online Learning Platform
                </h1>
                <p style="font-size: 1.25rem; color: #6c757d; margin-bottom: 1.5rem;">
                    Explore hundreds of high-quality courses, track your progress, and interact directly with instructors – all in one user-friendly LMS system.
                </p>
                <div style="display: flex; flex-wrap: wrap;">
                    <a asp-controller="Course" asp-action="Index"
                       style="background-color: #0d6efd; color: #fff; font-size: 1.1rem; font-weight: 600; padding: 0.75rem 2rem; border-radius: 0.5rem; margin-right: 1rem; margin-bottom: 0.5rem; text-decoration: none;">
                        🚀 Explore Courses
                    </a>
                    <a asp-controller="Category" asp-action="Index"
                       style="background-color: #198754; color: #fff; font-size: 1.1rem; font-weight: 600; padding: 0.75rem 2rem; border-radius: 0.5rem; margin-bottom: 0.5rem; text-decoration: none;">
                        🗂️ Browse Categories
                    </a>
                </div>
            </div>

            <!-- Right image -->
            <div class="col-lg-6 text-end">
                <img src="~/images/lms-illustration.png"
                     alt="LMS Illustration"
                     style="max-height: 400px; border-radius: 1rem; box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1);" />
            </div>
        </div>
    </div>
</section>

<!-- Benefits -->
<section style="background-color: #f6fffa; border-radius: 1.5rem; padding: 3rem 0; margin-top: 2rem;">
    <div class="container text-center">
        <h2 style="font-weight: 700; margin-bottom: 2.5rem;">💡 Why Choose Mio.LMS?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div style="padding: 1.5rem; background-color: #fff; border-radius: 1.5rem; box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.05); height: 100%;">
                    <h5 style="color: #198754; margin-bottom: 1rem;">📚 Diverse Courses</h5>
                    <p style="color: #6c757d;">Learn anytime, anywhere with a wide range of topics from soft skills to advanced technologies.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div style="padding: 1.5rem; background-color: #fff; border-radius: 1.5rem; box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.05); height: 100%;">
                    <h5 style="color: #198754; margin-bottom: 1rem;">📈 Progress Tracking</h5>
                    <p style="color: #6c757d;">Built-in reports and dashboards help you monitor your learning journey effectively.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div style="padding: 1.5rem; background-color: #fff; border-radius: 1.5rem; box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.05); height: 100%;">
                    <h5 style="color: #198754; margin-bottom: 1rem;">💬 Effective Interaction</h5>
                    <p style="color: #6c757d;">Engage in real-time discussions, Q&A, and feedback with instructors and peers.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section style="background-color: #f6fffa; border-radius: 1.5rem; padding: 3rem 0; margin-top: 2rem;">
    <div class="container text-center">
        <h2 style="font-weight: 700; color: #0d6efd; margin-bottom: 1.5rem;">
            🌟 Ready to start your learning journey?
        </h2>
        <p style="font-size: 1.25rem; color: #6c757d; margin-bottom: 2rem;">
            Create your free account now to unlock a world of knowledge and skill-building opportunities.
        </p>
        <a asp-controller="Account" asp-action="Register"
           style="background-color: #198754; color: #fff; font-size: 1.2rem; font-weight: 600; padding: 1rem 3rem; border-radius: 0.75rem; text-decoration: none;">
            ✍️ Sign Up Now
        </a>
    </div>
</section>
